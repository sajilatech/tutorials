CHECK PHP VERSION
	php -v
CHECK COMPOSER
composer 

CREATE PROJECT
laravel new example-app
composer create-project laravel/laravel example-app            //on laravel 11
composer require laravel/ui                                  //Laravel UI packag includes bootstrap, vue.js, react

php artisan ui bootstrap --auth                             // bootstrap +Auth
npm install && npm run dev

php artisan ui vue --auth								//Vue + Auth

php artisan ui react --auth								//React + Auth

php artisan ui bootstrap --auth									// not supported on laravel 9, 10, 11
npm install
npm run dev


composer require laravel/breeze --dev								// for laravel 11
php artisan breeze:install
npm install && npm run dev




php artisan make:controller LoginController

php artisan --version

Make table
	 php artisan make:migration create_students_table
php artisan migrate

php artisan migrate:rollback

SETTING APP SERVICE
app/Providers/AppServiceProvider.php
	 Schema::defaultStringLength(191); INSIDE BOOT
use Illuminate\Support\Facades\Schema;


